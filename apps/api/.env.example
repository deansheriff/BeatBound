# Server
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000,https://beatbound.sherpackage.com

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/beatbound

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-this-to-a-strong-secret
JWT_REFRESH_SECRET=your-refresh-secret-change-this-to-a-strong-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PLATFORM_ACCOUNT_ID=acct_...
PLATFORM_FEE_PERCENT=10.00

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=beatbound-videos
S3_BUCKET_REGION=us-east-1
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
