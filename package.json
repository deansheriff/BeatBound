{
  "name": "beatbound",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w @beatbound/api",
    "dev:web": "npm run dev -w @beatbound/web",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build -w @beatbound/api",
    "build:web": "npm run build -w @beatbound/web",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rimraf node_modules apps/*/node_modules packages/*/node_modules",
    "db:push": "npm run db:push -w @beatbound/database",
    "db:studio": "npm run studio -w @beatbound/database"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}